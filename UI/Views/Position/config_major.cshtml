
@{
    Layout = null;
}
@using Model;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>config_major</title>
    <link href="~/Content/table.css" rel="stylesheet" />
    <script src="~/Scripts/comm.js"></script>
</head>
<body>
    <form method="post" action="../customiz/customizAction!findMajor">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职位设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="button" value="添加" class="BUTTON_STYLE1"
                           onclick="window.location.href = 'config_major_Add';">
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="22%" class="TD_STYLE1">
                    职位分类编号
                </td>
                <td width="23%" class="TD_STYLE1">
                    职位分类名称
                </td>
                <td width="26%" class="TD_STYLE1">
                    职位编号
                </td>
                <td width="24%" class="TD_STYLE1">
                    职位名称
                </td>
                <td width="5%" class="TD_STYLE1">
                    删除
                </td>
            </tr>
            @foreach (config_major_Model item in ViewBag.list)
            {
                <tr>
                    <td class="TD_STYLE2">
                       @item.major_kind_id
                    </td>
                    <td class="TD_STYLE2">
                        @item.major_kind_name
                    </td>
                    <td class="TD_STYLE2">
                       @item.Position_Name_id
                    </td>
                    <td class="TD_STYLE2">
                        @item.Position_Name
                    </td>
                    <td class="TD_STYLE2">
                        <a href="config_majorDelete?id=@item.mak_id" onclick="return confirm('确定删除吗？')">删除</a>
                    </td>
                </tr>
            }
        </table>
        <p>

    </form>
</body>
</html>
