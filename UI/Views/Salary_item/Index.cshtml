 @model IEnumerable<Model.config_public_charModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/vue.js"></script>
    <style>
        .TD_STYLE2, .TD_STYLE3 {
            background-color: #FFB;
            border: 0px;
        }

        .TD_STYLE1 {
            background-color: #FFDB6F;
        }
    </style>
</head>
<body>

    <div id="div1">
        <form action="../customiz/customizAction!findStandardDetails" method="post">
            <table width="100%">
                <tbody class="TD_STYLE3">
                    <tr>
                        <td>
                            <font color="black">
                                您正在做的业务是：人力资源--客户化设置--薪酬管理设置--薪酬项目设置
                            </font>
                        </td>
                    </tr>
                    <tr>
                        <td align="right">
                            @Html.ActionLink("新增", "Create", "", new { @class = "BUTTON_STYLE1" })
                        </td>
                    </tr>
                </tbody>
            </table>
            <table bordercolorlight="#848284" bordercolordark="#eeeeee" class="TABLE_STYLE1" width="100%" cellspacing="1" cellpadding="0" border="1" class="table">
                <tbody>
                    <tr height="20">
                        <th class="TD_STYLE1" width="80%" align="center">
                            薪酬项目名称
                        </th>
                        <th class="TD_STYLE1" width="20%" align="center">
                            删除
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="TD_STYLE2">
                                @Html.DisplayFor(modelItem => item.attribute_name)
                            </td>
                            <td class="TD_STYLE2">
                                <a href="Salary_itemDelete?id=@item.Id" onclick = "return confirm('是否删除')">删除</a>
                               @* @Html.ActionLink("删除", "Delete", new { id = item.Id }, new { onclick = "return confirm('是否删除')" })*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </form>
    </div>
</body>
</html>
