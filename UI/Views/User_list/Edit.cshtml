@model Model.users

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        .TD_STYLE1 {
            background-color: #FFDB6F;
        }

        .INPUT_STYLE1 {
            BACKGROUND-COLOR: #FFFFCC;
            width: 30%;
        }

        .TD_STYLE2 {
    border-spacing: 1px;
    background-color: #FFFFBB;
    border: 0;
        }
    </style>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <form id="powerAction!doModifyUser" name="powerAction!doModifyUser" action="success.html" method="post">
            <table width="100%">
                <tbody>
                    <tr>
                        <td>
                            <font color="black">您正在做的业务是：人力资源--权限管理--编辑用户</font>
                        </td>
                    </tr>
                    <tr>
                        <td align="right">
                            <input type="submit" id="powerAction!doModifyUser_0" value="保存" class="BUTTON_STYLE1">
                            <input type="button" value="返回" class="BUTTON_STYLE1" onclick="history.back()">
                        </td>
                    </tr>
                </tbody>
            </table>
            <table bordercolorlight="#848284" bordercolordark="#eeeeee" class="TABLE_STYLE1" width="100%" cellspacing="1" cellpadding="3" border="1">
                <tbody>
                    <tr>
                        <td class="TD_STYLE1">用户名称</td>
                        <td class="TD_STYLE2">
                            @Html.EditorFor(model => model.user_name, new { htmlAttributes = new { @class = "INPUT_STYLE1" } })
                            @Html.ValidationMessageFor(model => model.user_name, "", new { @class = "text-danger" })
                        </td>
                        <td class="TD_STYLE1">用户密码</td>
                        <td class="TD_STYLE2">
                            @Html.EditorFor(model => model.user_password, new { htmlAttributes = new { @class = "INPUT_STYLE1" } })
                            @Html.ValidationMessageFor(model => model.user_password, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td class="TD_STYLE1">真实姓名</td>
                        <td class="TD_STYLE2">
                            @Html.EditorFor(model => model.user_true_name, new { htmlAttributes = new { @class = "INPUT_STYLE1" } })
                            @Html.ValidationMessageFor(model => model.user_true_name, "", new { @class = "text-danger" })
                        </td>
                        <td class="TD_STYLE1">用户身份</td>
                        <td class="TD_STYLE2">
                            @Html.DropDownList("RightId", ViewBag.dt as IEnumerable<SelectListItem>)
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    }
</body>
</html>
