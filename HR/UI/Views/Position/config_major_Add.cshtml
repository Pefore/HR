
@{
    Layout = null;
}
@model Model.config_major_Model
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>职位添加</title>
    <link href="~/Content/table.css" rel="stylesheet" />
    <script src="~/Scripts/comm.js"></script>
    <script src="~/javascript/jquery-1.7.2.js"></script>
</head>
<body>
    @using (Ajax.BeginForm("config_major_Add", new AjaxOptions() { HttpMethod = "Post" }))
    {
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职位设置--职位添加
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" value="提交" class="BUTTON_STYLE1" id="btn">
                    <input type="button" value="返回" class="BUTTON_STYLE1"
                           onclick="history.back();">
                </td>
            </tr>
        </table>

        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td class="TD_STYLE1" width="19%">
                    职位分类名称
                </td>
                <td class="TD_STYLE2" width="81%">
                    @Html.DropDownList("major_kind_name", @ViewBag.dt as IEnumerable<SelectListItem>, null, new { style = "width:200px", @id = "j" })
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1" width="19%">
                    职位名称<input type="text" id="te" name="te" hidden>
                </td>
                <td class="TD_STYLE2" width="81%">
                    @Html.TextBox("Position_Name", Model.Position_Name, new { @class = "INPUT_STYLE1", style = "width:200px" })
                    @Html.ValidationMessageFor(e => e.Position_Name,null)
                </td>
            </tr>
        </table>
    }
</body>
</html>
