@model IEnumerable<Model.config_file_first_kindModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>I级机构列表</title>
    <link href="~/Content/table.css" rel="stylesheet" />
</head>
<body>
    <table width="100%">
        <tr>
            <td>
                <font color="black">
                    您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--I级机构设置
                </font>
            </td>
        </tr>
        <tr>
            <td align="right">
                @Html.ActionLink("添加", "Create", "", new { @class = "BUTTON_STYLE1" })
            </td>
        </tr>
    </table>
      
    <table width="100%" border="1" cellpadding=0 cellspacing=1
           bordercolorlight=#848284 bordercolordark=#eeeeee
           class="TABLE_STYLE1">
        <tr>
            <td width="20%" class="TD_STYLE1">
                I级机构编号
            </td>
            <td width="20%" class="TD_STYLE1">
                I级机构名称
            </td>
            <td width="25%" class="TD_STYLE1">
                薪酬发放责任人编号
            </td>
            <td width="25%" class="TD_STYLE1">
                销售责任人编号
            </td>
            <td width="5%" class="TD_STYLE1">
                变更
            </td>
            <td width="5%" class="TD_STYLE1">
                删除
            </td>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.first_kind_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.first_kind_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.first_kind_salary_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.first_kind_sale_id)
                </td>
                <td>
                    @Html.ActionLink("变更", "Edit", new { id = item.Id }) |
                </td>
                <td> @Html.ActionLink("删除", "Delete", new { id = item.Id }, new { @onclick = "return confirm('确定要删除吗?')" })</td>
            </tr>
        }

    </table>
</body>
</html>
