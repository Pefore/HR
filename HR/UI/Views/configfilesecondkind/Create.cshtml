@model Model.config_file_second_kindModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>II级机构添加</title>
    <link href="~/Content/table.css" rel="stylesheet" />
</head>
<body>
    @using (Ajax.BeginForm("Create", new AjaxOptions() { HttpMethod = "Post" })) 
    {
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--II级机构设置--II级机构添加
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" value="提交" class="BUTTON_STYLE1">
                    @Html.ActionLink("返回", "Index", "", new { @class = "BUTTON_STYLE1" });
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="19%" class="TD_STYLE1">
                    I级机构名称
                </td>
                <td width="81%" class="TD_STYLE2">
                    @*<select name="cfsk.firstKindId" id="firstKindId" onchange="change()">
                        <option>请选择I级机构名称...</option>

                        <option value="1353318953319">Ⅰ级结构</option>

                        <option value="1353318929919">集团</option>

                        <option value="1353318937391">总部</option>

                    </select>*@
                    @Html.DropDownList("first_kind_id", @ViewBag.dt as IEnumerable<SelectListItem>,"请选择I级机构名称", new { @class = "dropdown" })
                </td>
            </tr>
            <tr>
                <td width="19%" class="TD_STYLE1">
                    II级机构编号
                </td>
                <td width="81%" class="TD_STYLE2"></td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    II级机构名称
                </td>
                <td class="TD_STYLE2">
                    @*<input type="text" class="INPUT_STYLE1" name="cfsk.secondKindName" value="" />*@
                    @Html.EditorFor(model => model.second_kind_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.second_kind_name, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    薪酬发放责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
                </td>
                <td class="TD_STYLE2">
                    @*<textarea rows="4" cols="" class="TEXTAREA_STYLE1" name="cfsk.secondSalaryId"></textarea>*@
                    @Html.TextAreaFor(model => model.econd_salary_id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.econd_salary_id, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    销售责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
                </td>
                <td class="TD_STYLE2">
                    @*<textarea rows="4" cols="" class="TEXTAREA_STYLE1" name="cfsk.secondSaleId"></textarea>*@
                    @Html.TextAreaFor(model => model.second_sale_id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.second_sale_id, "", new { @class = "text-danger" })
                </td>
            </tr>
        </table>
            }
</body>
</html>
