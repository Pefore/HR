@model Model.engage_major_release_Model

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
    <link href="~/Content/table.css" rel="stylesheet" />
    <link href="~/Content/cwcalendar.css" rel="stylesheet" />
    <script src="~/javascript/comm/comm.js"></script>
    <script src="~/javascript/comm/list.js"></script>
    <script src="~/javascript/calendar-ch.js"></script>
    <script src="~/javascript/jquery-1.7.2.js"></script>
    <script src="~/javascript/locate.js"></script>
    <script src="~/javascript/select.js"></script>
    <script type="text/javascript" src="~/javascript/comm/time.js">
    </script>
</head>
<body>
    @using (Ajax.BeginForm("Update1", new AjaxOptions() { HttpMethod = "post" }))
    {

        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--招聘管理--职位发布管理--职位发布变更 </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="button" value="申请职位" class="BUTTON_STYLE1" onclick="alert('请进行简历登记'); window.location.href = '/register/Index?'+$('form').serialize();">
                    <input type="button" value="返回" class="BUTTON_STYLE1" onclick="window.location.href = '/position_release_search/Index';">
                </td>
            </tr>
        </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td class="TD_STYLE1" width="11%">
                        I级机构
                    </td>
                    <td width="14%" class="TD_STYLE2">
                        @Html.EditorFor(model => model.mre_id, new { htmlAttributes = new { @hidden = "hidden" } })
                        @Html.EditorFor(model => model.first_kind_id, new { htmlAttributes = new { @hidden = "hidden" } })
                        @Html.EditorFor(model => model.first_kind_name, new { htmlAttributes = new { @class = "INPUT_STYLE2", @readonly = "readonly" } })

                    </td>
                    <td width="11%" class="TD_STYLE1">
                        II级机构
                    </td>
                    <td width="14%" class="TD_STYLE2">
                        @Html.EditorFor(model => model.second_kind_id, new { htmlAttributes = new { @hidden = "hidden" } })
                        @Html.EditorFor(model => model.second_kind_name, new { htmlAttributes = new { @class = "INPUT_STYLE2" ,@readonly= "readonly" } })
                    </td>
                    <td width="11%" class="TD_STYLE1">
                        III级机构
                    </td>
                    <td class="TD_STYLE2">
                        @Html.EditorFor(model => model.third_kind_id, new { htmlAttributes = new { @hidden = "hidden" } })
                        @Html.EditorFor(model => model.third_kind_name, new { htmlAttributes = new { @class = "INPUT_STYLE2", @readonly = "readonly" } })
                    <td width="11%" class="TD_STYLE1">
                        招聘类型
                    </td>
                    <td class="TD_STYLE2" colspan="2">
                       @Html.EditorFor(model => model.engage_type, new { htmlAttributes = new { @class = "INPUT_STYLE2", @readonly = "readonly" } })
                    </td>
                </tr>
                <tr style="height:30px">
                    <td class="TD_STYLE1">
                        职位分类
                    </td>
                    <td class="TD_STYLE2">
                        @Html.EditorFor(model => model.major_kind_id, new { htmlAttributes = new { @hidden = "hidden" } })
                        @Html.EditorFor(model => model.major_kind_name, new { htmlAttributes = new { @class = "INPUT_STYLE2", @readonly = "readonly" } })
                    </td>
                    <td class="TD_STYLE1">
                        职位名称
                    </td>
                    <td class="TD_STYLE2">
                        @Html.EditorFor(model => model.major_id, new { htmlAttributes = new { @hidden = "hidden" } })
                        @Html.EditorFor(model => model.major_name, new { htmlAttributes = new { @class = "INPUT_STYLE2", @readonly = "readonly" } })
                    </td>
                    <td class="TD_STYLE1">
                        招聘人数
                    </td>
                    <td class="TD_STYLE2">
                        @Html.EditorFor(model => model.human_amount, new { htmlAttributes = new { @class = "INPUT_STYLE2", @readonly = "readonly" } })
                    </td>
                    <td class="TD_STYLE1">
                        截止日期
                    </td>
                    <td class="TD_STYLE2">
                        @Html.EditorFor(model => model.deadline, new { htmlAttributes = new { @class = "INPUT_STYLE2", @readonly = "readonly" } })
                    </td>
                </tr>
                <tr style="height:30px">
                    <td class="TD_STYLE1">
                        登记人
                    </td>
                    <td class="TD_STYLE2">
                        @Html.EditorFor(model => model.register, new { htmlAttributes = new { @class = "INPUT_STYLE2", @readonly = "readonly" , @id = "user"} })
                    </td>
                    <td class="TD_STYLE1">
                        登记时间
                    </td>
                    <td class="TD_STYLE2">
                       @Html.EditorFor(model => model.regist_time, new { htmlAttributes = new { @class = "INPUT_STYLE2", @readonly = "readonly" } })
                    </td>
                </tr>
                <tr style="height:40px">
                    <td class="TD_STYLE1">
                        职位描述
                    </td>
                    <td class="TD_STYLE2" colspan="8">
                        @Html.EditorFor(model => model.major_describe, new { htmlAttributes = new { @class = "INPUT_STYLE2", @readonly = "readonly", @rows = "4", @cols = "100%", @style = "height:50px"} })
                    </td>

                </tr>
                <tr style="height:40px">
                    <td class="TD_STYLE1">
                        招聘要求
                    </td>
                    <td class="TD_STYLE2" colspan="8">
                        @Html.EditorFor(model => model.engage_required, new { htmlAttributes = new { @class = "INPUT_STYLE2", @readonly = "readonly", @rows = "4", @cols = "100%", @style = "height:50px"} })
                    </td>

                </tr>
            </table>
    }
</html>
